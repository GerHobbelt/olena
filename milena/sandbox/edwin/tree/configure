#! /bin/bash


for arg in "$@"; do
    if [ "$arg" == "--debug" ]; then
	debug=1;
    fi

    if [ "$arg" == "--release" ]; then
	release=1;
    fi
done

rm -f makefile.rules
touch makefile.rules
if [ "$debug" ]; then
    echo 'DEBUG=1' > makefile.rules
fi
if [ "$release" ]; then
    echo 'RELEASE=1' > makefile.rules
fi