#! /bin/bash

for arg in "$@"; do
    if [ "$arg" == "--debug" ]; then
	debug=1;
    elif [ "$arg" == "--release" ]; then
	release=1;
    elif [ "${arg#--mln_dir=}" ]; then
	MLN_DIR=${arg#--mln_dir=}
    fi
done

rm -f makefile.rules
touch makefile.rules
if [ "$debug" ]; then
    echo 'DEBUG = 1' >> makefile.rules
fi
if [ "$release" ]; then
    echo 'RELEASE = 1' >> makefile.rules
fi
echo "MLN_DIR = $MLN_DIR" >> makefile.rules