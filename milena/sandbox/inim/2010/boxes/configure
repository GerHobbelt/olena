#! /bin/bash

for arg in "$@"; do
    if [ "$arg" == "--debug" ]; then
	debug=1;
    elif [ "$arg" == "--release" ]; then
	release=1;
    elif [ "${arg#--mln-dir=}" ]; then
	MLN_DIR=${arg#--mln-dir=}
    fi
done

if [ x$MLN_DIR == x ]; then
    echo "MLN_DIR not set" > /dev/stderr
    exit 1
fi

rm -f Makefile.rules
touch Makefile.rules

if [ "$debug" ]; then
    echo 'DEBUG = 1' >> Makefile.rules
fi
if [ "$release" ]; then
    echo 'RELEASE = 1' >> Makefile.rules
fi
echo "MLN_DIR = $MLN_DIR" >> Makefile.rules
